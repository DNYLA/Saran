// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
  previewFeatures = []
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id         String      @id
  lastFMName String?
  lastFMTag  String?
  donator Boolean @default(false)
  guilds     GuildUser[]
}

model GuildUser {
  userId             String
  displayName        String?
  serverId           String
  lastFMTag          String?
  reactionBoardScore Int     @default(0)
  xp Int @default(0)
  user               User    @relation(fields: [userId], references: [id])
  isBooster Boolean @default(false)
  customBoostRoleId String?
  @@id([userId, serverId])
}

model GuildConfig {
  id                   String                  @id
  prefix               String                  @default(",")
  reactionBoardChannel String?
  reactionBoardLimit   Int                     @default(0)
  rbMessages           ReactionBoardMessages[]
}

model ReactionBoardMessages {
  id           String
  serverId     String
  reactionName String
  reactions    Int
  userId       String
  guild        GuildConfig @relation(fields: [serverId], references: [id])

  @@id([id, serverId])
}
